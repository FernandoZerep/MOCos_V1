@model IEnumerable<MOCos_V1.Unidad>

@{
    ViewBag.Title = "MostrarModulos";
    Layout = "~/Views/Shared/_LayoutMaestro.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcomb-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-support"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Materia</h2>
                                <p>@Html.ViewBag.Materia</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-3">
                        <div class="breadcomb-report">
                            <button onclick="location.href='@Url.Action("InsertarUnidad","Maestro")'" data-toggle="tooltip" data-placement="left" title="Agregar Unidad" class="btn"><i class="glyphicon glyphicon-plus"></i></button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Inbox area Start-->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="inbox-text-list sm-res-mg-t-30">
                    <div class="accordion-stn">
                        <div class="panel-group" data-collapse-color="nk-green" id="accordionGreen" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-collapse notika-accrodion-cus">
                                <div class="panel-heading" role="tab">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordionGreen" href="#accordionGreen-one" aria-expanded="true">
                                            Unidades
                                        </a>
                                    </h4>
                                </div>
                                <div id="accordionGreen-one" class="collapse in" role="tabpanel">
                                    <div class="panel-body">

                                        <div class="bsc-tbl">
                                            <table class="table table-sc-ex">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            ID
                                                        </th>
                                                        <th>
                                                            Nombre
                                                        </th>
                                                        <th>
                                                            Operaciones
                                                        </th>

                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var item in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.idUnidad)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.nombre)
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink("Editar", "EditarUnidad", new { id = item.idUnidad }, new { @class = "btn btn-info glyphicon glyphicon-edit" }) &nbsp;
                                                                @Html.ActionLink("Detalles", "DetallesUnidad", new { id = item.idUnidad }, new { @class = "btn btn-warning glyphicon glyphicon-share" }) &nbsp;
                                                                <button type="button" class="btn btn-danger glyphicon glyphicon-trash" data-toggle="modal" data-target="#myModalone">Eliminar</button>
                                                                <div class="modal fade" id="myModalone" role="dialog">
                                                                    <div class="modal-dialog modals-default">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">
                                                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                                            </div>
                                                                            <div class="modal-body">
                                                                                <h2>Eliminar</h2>
                                                                                <p>¿Seguro que desea eliminar este elemento?</p>
                                                                                <p>Esta accion eliminara permanentemente todos los documentos, temas y registros de alumnos que hayan tomado dicha asesoria</p>
                                                                                <p>Esta accion no se puede restablecer ;v</p>
                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                @Html.ActionLink("Eliminar", "EliminarUnidad", new { id = item.idUnidad }, new { @class = "btn btn-danger" })
                                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                     }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
