@model IEnumerable<MOCos_V1.Unidad>


@{
    ViewBag.Title = "Materia";
    Layout = "~/Views/Shared/_LayoutMaestro.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="breadcomb-list">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="breadcomb-wp">
                            <div class="breadcomb-icon">
                                <i class="notika-icon notika-support"></i>
                            </div>
                            <div class="breadcomb-ctn">
                                <h2>Materia</h2>
                                <p>@Html.DisplayNameFor(model => model.Materia.NombreMateria)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<!-- Inbox area Start-->
<div class="inbox-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="inbox-left-sd">
                    <div class="compose-ml">
                        <a class="btn waves-effect" href="#">Unidades</a>
                    </div>
                    <div class="inbox-status">
                        <ul class="inbox-st-nav inbox-ft">
                            <li><a href="Insertar_Unidad"><i class="notika-icon notika-sent"></i> Crear</a></li>
                            <li><a href="#"><i class="notika-icon notika-draft"></i> Modificar</a></li>
                            <li><a href="#"><i class="notika-icon notika-trash"></i> Eliminar</a></li>
                        </ul>
                    </div>
                    <hr />
                    <div class="compose-ml">
                        <a class="btn waves-effect" href="#">Temas</a>
                    </div>
                    <div class="inbox-status">
                        <ul class="inbox-st-nav inbox-ft">
                            <li><a href="#"><i class="notika-icon notika-sent"></i> Crear</a></li>
                            <li><a href="#"><i class="notika-icon notika-draft"></i> Modificar</a></li>
                            <li><a href="#"><i class="notika-icon notika-trash"></i> Eliminar</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="inbox-text-list sm-res-mg-t-30">
                    <div class="accordion-stn">
                        <div class="panel-group" data-collapse-color="nk-green" id="accordionGreen" role="tablist" aria-multiselectable="true">
                            <div class="panel panel-collapse notika-accrodion-cus">
                                <div class="panel-heading" role="tab">
                                    <h4 class="panel-title">
                                        <a data-toggle="collapse" data-parent="#accordionGreen" href="#accordionGreen-one" aria-expanded="true">
                                            Unidadades
                                        </a>
                                    </h4>
                                </div>
                                <div id="accordionGreen-one" class="collapse in" role="tabpanel">
                                    <div class="panel-body">
                                        <div class="bsc-tbl-cls">
                                            <table class="table table-cl">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Unidad</th>
                                                        <th>Acciones</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in Model)
                                                     {
                                                        <tr class="active">
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Materia.idMateria)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Materia.NombreMateria)
                                                            </td>
                                                            <td>
                                                                @Html.ActionLink("Editar", "EditarUnidad", new { id = item.idUnidad }) |
                                                                @Html.ActionLink("Detalles", "DetallesUnidad", new { id = item.idUnidad }) |
                                                                @Html.ActionLink("Eliminar", "EliminarUnidad", new { id = item.idUnidad })
                                                            </td>
                                                        </tr>
                                                     }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Inbox area End-->
