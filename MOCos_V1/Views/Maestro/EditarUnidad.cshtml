@model MOCos_V1.Unidad

@{
    ViewBag.Title = "EditarUnidad";
    Layout = "~/Views/Shared/_LayoutMaestro.cshtml";
}


@using (Html.BeginForm())
 {
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-support"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Materia</h2>
                                    <p>@Html.ViewBag.Materia</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <!-- Inbox area Start-->
    <div class="inbox-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="inbox-text-list sm-res-mg-t-30">
                        <!--Pa que vaya junto al editar-->
                        <div class="form-element-list">
                            <div class="basic-tb-hd">
                                <h2>Modificar unidad</h2>
                                <p>Llene los campos para modificar el nombre de la unidad</p>
                            </div>
                            <div class="form-horizontal">
                                <h4>Unidad</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.idUnidad)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.nombre,"Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Guardar" class="btn btn-default" />
                                    </div>
                                </div>
                                <br />
                                <br />
                                <div>
                                    @Html.ActionLink("Regresar", "MostrarModulos")
                                </div>
                            </div>
                        </div>
                        <!--Final Pa que vaya junto al editar xd-->
                    </div>
                </div>
            </div>
        </div>
    </div>
 }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
