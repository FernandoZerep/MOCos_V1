@model MOCos_V1.Temas

@{
    ViewBag.Title = "InsertarTema";
    Layout = "~/Views/Shared/_LayoutMaestro.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-support"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Unidad</h2>
                                    <p>@Html.ViewBag.LaUnidad</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <!-- Inbox area Start-->
    <div class="inbox-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="inbox-text-list sm-res-mg-t-30">
                        <!--Pa que vaya junto al editar-->
                        <div class="form-element-list">
                            <div class="basic-tb-hd">
                                <h2>Insertar nuevo tema</h2>
                                <p>Llene los campos para insertar un nuevo tema</p>
                            </div>
                            <form data-toggle="validator" role="form">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Nombre, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Tema # : Descripcion" } })
                                        @Html.ValidationMessageFor(model => model.Nombre, "Campo requerido")
                                    </div>
                                </div>
                                <br />
                                <div class="form-group">
                                    <input type="submit" value="Agregar" class="btn btn-default" />
                                    <br />
                                    <br />
                                    <div>
                                        @Html.ActionLink("Regresar", "MostrarModulos")
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!--Final Pa que vaya junto al editar xd-->
                    </div>
                </div>
            </div>
        </div>
    </div>
}
